{
	"default_module": "powerline.segments.common",
	"segments": {
		"right": [
			{
				"function": "weather",
				"priority": 50,
        "args": {
          "unit": "F",
          "temp_coldest": -10,
          "temp_hottest": 40
        }
			},
			{
				"function": "date"
			},
			{
				"function": "date",
				"name": "time",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
			{
				"function": "email_imap_alert",
				"priority": 10,
				"args": {
					"username": "",
					"password": ""
				}
			}
		]
	}
}
